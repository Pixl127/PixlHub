-- Egg Tab
--------------------------------------------------------
--[[
local AutoOpenEggToggle = EggTab:CreateToggle({
   Name = "Auto Open Egg",
   CurrentValue = false,
   Flag = "Toggle1",
   Callback = function(Value)
   end,
})
--]]



local allEggs = {}

for _, area in ipairs(workspace.__MAP.Eggs:GetChildren()) do
   if area:FindFirstChild("Eggs") then
      for _, egg in ipairs(area.Eggs:GetChildren()) do
         local id = egg:GetAttribute("ID")
         if id then
            table.insert(allEggs, id)
         end
      end
   end
end

local EggSelectionDropdown = EggTab:CreateDropdown({
   Name = "Select Egg",
   Options = allEggs,             -- hier deine dynamische Liste einsetzen
   CurrentOption = { allEggs[1] }, -- z. B. erstes Egg als Default nehmen
   MultipleOptions = false,
   Flag = "Dropdown1",
   Callback = function(Options)
      Rayfield:Notify({
         Title = "Egg Selected:",
         Content = table.concat(Options, ", "),
         Duration = 6.5,
         Image = 4483362458,
      })
   end,
})




--------------------------------------------------------
-- Misc Tab
--------------------------------------------------------

--[[
local function collectGifts()
   while task.wait(60) do
      for number = 1, 12, 1 do
         workspace:WaitForChild("__THINGS"):WaitForChild("__REMOTES"):WaitForChild("redeem free gift"):InvokeServer(number)
      end
   end
end

local toggle = false
local AutoCollectFreeGiftsToggle = MiscTab:CreateToggle({
   Name = "Auto Collect Free Gifts",
   CurrentValue = false,
   Flag = "Toggle1",
   Callback = function(Value)
      toggle = !toggle
      collectGifts()
   end,
})
--]]




--------------------------------------------------------
-- Script Tab
--------------------------------------------------------
local DestroyUiButton = ScriptTab:CreateButton({
   Name = "Destroy UI",
   Callback = function()
      Rayfield:Destroy()
   end,
})

--------------------------------------------------------
-- Dev Tab
--------------------------------------------------------
local LoadInfiniteYieldButton = DevTab:CreateButton({
   Name = "Load Infinite Yield",
   Callback = function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
   end,
})

