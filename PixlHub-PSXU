--------------------------------------------------------
-- Egg Tab
--------------------------------------------------------
-- ðŸ¥š Alle Eggs aus der Map einsammeln
local allEggs = {}
for _, area in ipairs(workspace.__MAP.Eggs:GetChildren()) do
    if area:FindFirstChild("Eggs") then
        for _, egg in ipairs(area.Eggs:GetChildren()) do
            local id = egg:GetAttribute("ID")
            if id then
                table.insert(allEggs, id)
            end
        end
    end
end

-- ðŸ“¦ Variablen fÃ¼r Auswahl und Status
local selectedEgg = allEggs[1]
local selectedAmount = "1Egg"
local autoOpen = false

-- ðŸ¥š Dropdown fÃ¼r Egg-Auswahl
local EggSelectionDropdown = EggTab:CreateDropdown({
    Name = "Select Egg",
    Options = allEggs,
    CurrentOption = { selectedEgg },
    MultipleOptions = false,
    Flag = "Dropdown_SelectEgg",
    Callback = function(Options)
        selectedEgg = Options[1]
        Rayfield:Notify({
            Title = "Egg Selected",
            Content = selectedEgg,
            Duration = 5,
            Image = 4483362458,
        })
    end,
})

-- ðŸ”¢ Dropdown fÃ¼r Menge-Auswahl
local EggAmountDropdown = EggTab:CreateDropdown({
    Name = "Select Egg Opening Amount",
    Options = { "1Egg", "3Eggs", "8Eggs" },
    CurrentOption = { selectedAmount },
    MultipleOptions = false,
    Flag = "Dropdown_SelectAmount",
    Callback = function(Options)
        selectedAmount = Options[1]
        Rayfield:Notify({
            Title = "Opening Amount Selected",
            Content = selectedAmount,
            Duration = 5,
            Image = 4483362458,
        })
    end,
})

-- ðŸ•¹ Toggle fÃ¼r Auto-Hatch
local AutoOpenEggToggle = EggTab:CreateToggle({
    Name = "Auto Hatch Selected Egg",
    CurrentValue = false,
    Flag = "Toggle_AutoHatch",
    Callback = function(Value)
        autoOpen = Value
        if autoOpen then
            task.spawn(function()
                while autoOpen do
                    if selectedEgg then
                        -- Mapping basierend auf deinem Schema
                        local open3, open8, extra = false, false, false
                        if selectedAmount == "3Eggs" then
                            open3, open8, extra = true, false, false
                        elseif selectedAmount == "8Eggs" then
                            open3, open8, extra = false, true, true
                        end

                        local args = {
                            { selectedEgg, open3, open8, extra }
                        }
                        workspace:WaitForChild("__THINGS")
                            :WaitForChild("__REMOTES")
                            :WaitForChild("buy egg")
                            :InvokeServer(unpack(args))
                    end
                    task.wait(0.3)
                end
            end)
        end
    end,
})





