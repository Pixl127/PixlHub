--[[

local allEggs = {}

for _, area in ipairs(workspace.__MAP.Eggs:GetChildren()) do
   if area:FindFirstChild("Eggs") then
      for _, egg in ipairs(area.Eggs:GetChildren()) do
         table.insert(allEggs, egg)
         print(egg.Name)
      end
   end
end


local args = {
   { "Cracked Egg", false, true, true }
}
workspace:WaitForChild("__THINGS"):WaitForChild("__REMOTES"):WaitForChild("buy egg"):InvokeServer(unpack(args))

local allEggs = {}

for _, area in ipairs(workspace.__MAP.Eggs:GetChildren()) do
    if area:FindFirstChild("Eggs") then
        for _, egg in ipairs(area.Eggs:GetChildren()) do
            local id = egg:GetAttribute("ID")
            if id then
                table.insert(allEggs, id)
                print(id)
            end
        end
    end
end


